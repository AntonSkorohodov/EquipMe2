<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skv_main_background"
    tools:context=".Activities.RegisterActivity"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="60dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="40dp"
        app:cardBackgroundColor="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/sign_LBL_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/user_LBL_email"
                android:layout_centerInParent="true"
                android:text="EquipMe"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <EditText
                android:id="@+id/user_LBL_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/user_LBL_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/cabin"
                android:hint="Email"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/user_LBL_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/user_LBL_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/cabin"
                android:hint="Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/user_LBL_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/user_LBL_password_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/cabin"
                android:hint="Phone"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/user_LBL_password_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/cabin"
                android:hint="Password"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/user_LBL_password_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_LBL_password_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:ems="10"
                android:fontFamily="@font/cabin"
                android:hint="Password"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/user_BTN_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_LBL_password_2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:backgroundTint="@color/skv_button_color"
                android:fontFamily="@font/cabin_bold"
                android:text="REGISTER"
                android:textColor="@color/black" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
